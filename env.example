# ============================================
# AI POWER GRID WORKER CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# Get your API key from https://api.aipowergrid.io/register

# Required: Your API key from AI Power Grid
GRID_API_KEY=your_powergrid_api_key

# Worker name - use format: WorkerName.WalletAddress for proper attribution
GRID_WORKER_NAME=MyComfyWorker.0xYourWalletAddress

# ============================================
# COMFYUI SETTINGS
# ============================================
COMFYUI_URL=http://127.0.0.1:8188             # ComfyUI API URL
GRID_API_URL=https://api.aipowergrid.io/api   # AI Power Grid API endpoint

# ============================================
# CONTENT & PERFORMANCE SETTINGS
# ============================================
GRID_NSFW=false                                # Allow NSFW content generation (true/false)
GRID_THREADS=2                                 # Number of concurrent jobs to process

# Maximum output resolution in pixels
# Examples:
#   1048576  = 1024x1024 (1MP) - Safe for 8GB VRAM
#   2985984  = ~1728x1728 (3MP) - Good for 12-16GB VRAM
#   3932160  = ~2048x1920 (4MP) - Requires 24GB+ VRAM
GRID_MAX_PIXELS=1048576

# ============================================
# MODEL CONFIGURATION
# ============================================
# Models to host - comma-separated list of model/workflow names
# These will be advertised to the Grid for job matching
# Configure via Web UI at http://localhost:5000 or set here
WORKFLOW_FILE=

# API Keys for Model Downloads
HUGGING_FACE_API_KEY=                          # Get from https://huggingface.co/settings/tokens
CIVITAI_API_KEY=                               # Get from https://civitai.com/user/account

# Path to model files (Docker uses /app/ComfyUI/models internally)
MODELS_PATH=/app/ComfyUI/models

# Note: GRID_IMAGE_MODEL_REFERENCE_REPOSITORY_PATH is deprecated
# The blockchain (ModelVault contract) is now the single source of truth for model metadata

# ============================================
# MODELVAULT - BLOCKCHAIN MODEL REGISTRY
# ============================================
# IMPORTANT: The blockchain is the SINGLE source of truth for model registration.
# Only models registered in the ModelVault contract can be served on the Grid.
# Models are discovered, validated, and downloaded via the ModelVault contract.

MODELVAULT_ENABLED=true                        # Enable blockchain model registry (required)
MODELVAULT_RPC_URL=https://mainnet.base.org    # Base Mainnet RPC endpoint
MODELVAULT_CONTRACT=0x79F39f2a0eA476f53994812e6a8f3C8CFe08c609  # Grid ModelVault contract address

# ============================================
# RECIPESVAULT - BLOCKCHAIN WORKFLOW REGISTRY
# ============================================
# IMPORTANT: The blockchain is now the SINGLE source of truth for workflow/recipe registration.
# Workflows are stored on-chain in the RecipesVault contract (diamond proxy facet).
# If RecipesVault is enabled, workflows will be loaded from blockchain instead of local JSON files.

RECIPESVAULT_ENABLED=true                      # Enable blockchain workflow registry
RECIPESVAULT_RPC_URL=https://mainnet.base.org # Base Mainnet RPC endpoint (defaults to MODELVAULT_RPC_URL)
RECIPESVAULT_CONTRACT=                         # RecipesVault contract address (diamond proxy facet address)
RECIPESVAULT_CHAIN_ID=8453                     # Chain ID (Base Mainnet: 8453)

# ============================================
# WALLET CONNECT - WEB3 WALLET INTEGRATION
# ============================================
# Project ID for wallet connections in the management UI
# Get your own project ID from https://cloud.walletconnect.com (free)
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=12b7ae7346ef69c8b50e27d3fba44e61

# ============================================
# OPTIONAL / ADVANCED SETTINGS
# ============================================
COMFYUI_EXTRA_ARGS=                            # Extra ComfyUI arguments (e.g., --lowvram, --cpu)
BUILD_ELECTRON=true                            # Set false to skip Electron app build
DEBUG=false                                    # Enable debug logging

