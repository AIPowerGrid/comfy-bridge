{
  "name": "aipg-model-manager",
  "version": "1.0.0",
  "private": true,
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "next dev -p 5000",
    "build": "next build",
    "start": "next start -p 5000",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "electron:dev": "npm run electron:compile && concurrently \"npm run dev\" \"wait-on http://localhost:5000 && electron .\"",
    "electron:build": "node scripts/run-electron-build.js",
    "electron:pack": "node scripts/run-electron-build.js --pack",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@rainbow-me/rainbowkit": "^2.2.8",
    "@tanstack/react-query": "^5.37.1",
    "framer-motion": "^11.3.19",
    "next": "14.2.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "viem": "^2.37.11",
    "wagmi": "^2.17.5"
  },
  "devDependencies": {
    "@types/electron": "^1.4.38",
    "@types/jest": "^29.5.12",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.6",
    "ts-jest": "^29.1.2",
    "tsx": "^4.7.0",
    "typescript": "^5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "io.aipowergrid.model-manager",
    "productName": "AI Power Grid Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      ".next/**/*",
      "!**/persistent_volumes/models/**",
      "!**/persistent_volumes/input/**",
      "!**/persistent_volumes/output/**",
      "!**/persistent_volumes/cache/**",
      "public/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/logo.png"
    },
    "win": {
      "target": [
        "dir"
      ],
      "icon": "public/aipg.ico",
      "sign": null,
      "signingHashAlgorithms": []
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "public/logo.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
